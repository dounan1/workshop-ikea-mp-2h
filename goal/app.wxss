/**app.wxss**/

page {
  font: 81.25%/1.5 Verdana, sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.navigation-bar {
  background-color: white;
  position: absolute;
  top: 0;
  height: 120rpx;
  width: 100vw;
  display: flex;
  align-items: center;
  padding: 30rpx 0rpx 0rpx 40rpx;
}

.logo {
  width: 100rpx;
}

.btn {
  background-color: #407ab1;
  color: white;
  border-radius: 3px;
  padding: 0px 30px;
}